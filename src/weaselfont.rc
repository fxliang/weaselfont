    LTEXT           "~", 0, 295, 17, 6, 9, SS_LEFT, WS_CHILD | WS_EX_LEFT
    EDITTEXT        IDC_EDIT_RANGEEND, 306, 15, 50, 14, WS_CHILD | WS_DISABLED | ES_AUTOHSCROLL, WS_EX_LEFT
